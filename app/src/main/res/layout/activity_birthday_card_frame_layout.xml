<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BirthdayCardFrameLayout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/schema_rocket"
        android:scaleType="centerCrop"
        android:contentDescription="Cartão de aniversário com imagem de um esquema de foguete"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_text"
        android:textAppearance="@style/BirthdayCardText"
        android:layout_margin="@dimen/default_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_text"
        android:layout_gravity="bottom|right"
        android:textAppearance="@style/BirthdayCardText"
        android:layout_margin="@dimen/default_margin"/>

</FrameLayout>